{
  "manifest_version": 3,
  "name": "Vuser AI Blockchain Open Platform",
  "version": "1.0",
  "description": "Vuser is open source browser extension for all AI and agents to work seamlessly and securely with vuser blockchain based security and encryption.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "test.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "test.html",
        "test.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "nativeMessaging",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}